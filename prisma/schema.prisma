// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("RON_BASRA_DATABASE_URL")
}

model ListingUrl{
  id String @id @default(uuid())
  url String @unique
  lisitng Listing?
  createdAt DateTime @default(now())
  category Category
  @@unique([url, category])
}

model Room {
  id        String  @id @default(uuid())
  level     String
  type      String
  width     String
  length    String
  listingId String
  listing   Listing @relation(fields: [listingId], references: [id])
}

model Bathroom {
  id        String  @id @default(uuid())
  level     String
  ensuite   Boolean
  pieces    Int
  listingId String
  listing   Listing @relation(fields: [listingId], references: [id])
}

model Listing{
  id String @id @default(uuid())
  title String
  description String
  mainSummary Json
  photos Images[]
  generalInfo Json?
  coordinates Json
  rooms Room[]
  bathrooms Bathroom[]
  listingDetails Json?
  wideInfo Json?
  urlId String? @unique
  url ListingUrl? @relation(fields: [urlId], references: [id])
  price Int?
  sold Boolean @default(false)
  category Category
  openHouse Boolean @default(false)
  openHouseDate DateTime?
  createdAt DateTime @default(now())
}

enum Category {
  MY_LISTING
  OFFICE_LISTING
}

model Images{
  id String @id @default(uuid())
  downloadUrl String
  savedPath String
  listingId String
  listing Listing @relation(fields: [listingId], references: [id])

  @@unique([listingId, downloadUrl])
}
